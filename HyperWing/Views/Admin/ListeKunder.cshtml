@model IEnumerable<HyperWing.Model.Kunde>

@{
    ViewBag.Title = "ListeKunder";
}

<header>
    <link rel="stylesheet" href="~/Content/styles.css">
</header>

<h2>ListeKunder</h2>

<hr />

<section class="containerStyle2">

    <p>
        @Html.ActionLink("Create New", "RegistrerKunde")
    </p>
 
        
        <table class="table containerStyle">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.personNr)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.navn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.epost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefon)
                </th>
                <th></th>
            </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.personNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.navn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.epost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefon)
        </td>
        <td>
            @Html.ActionLink("Edit", "EndreKunde", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

        </table>

